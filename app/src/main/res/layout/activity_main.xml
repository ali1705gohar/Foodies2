<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_theme_white"
    android:orientation="vertical"
    android:padding="20dp"
    android:backgroundTint="@color/my_theme_lightgray2"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_foodies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Foodies"
        android:textColor="@color/my_theme_pink"
        android:textSize="80sp"
        android:textStyle="bold"
        android:fontFamily="@font/calibril"

        />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/splash_anim"
        android:layout_width="300dp"
        android:layout_height="350dp"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"

        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/food_market" />

    <TextView
        android:id="@+id/txt_youenjoy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="You Order"
        android:textColor="@color/my_theme_pink"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_above="@id/txt_wedeliver"
        android:fontFamily="@font/calibril"
        />

    <TextView
        android:id="@+id/txt_wedeliver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="We Deliver"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_above="@id/txt_lorim"
        android:fontFamily="@font/calibril"
        />

    <TextView
        android:id="@+id/txt_lorim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order now and enjoy healthy and delicious food."
        android:textColor="@color/black"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/calibril"
        />
</RelativeLayout>