<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".cartActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:background="@color/my_theme_pink"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Cart"
            android:textColor="@color/white"
            android:fontFamily="@font/calibrib"
            android:textSize="30dp"
            android:layout_marginLeft="20dp"
            />

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view_cart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        tools:listitem="@layout/sample_cart"

        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/alibri"
                        android:text="Sub Total"
                        android:textColor="@color/black" />

                    <TextView

                        android:id="@+id/txt_cart_totalprice1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:fontFamily="@font/alibri"
                        android:text="#####"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/alibri"
                        android:text="Delivary Charges"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_cart_delivary_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:fontFamily="@font/alibri"
                        android:text="000000"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/alibri"
                        android:text="Service Charges"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_cart_service_charges"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:fontFamily="@font/alibri"
                        android:text="000000"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/alibri"
                        android:text="Deal or Voucher Discount "
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/txt_cart_dicount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:fontFamily="@font/alibri"
                        android:gravity="right"
                        android:text="-6%"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"


                    >

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/calibrib"
                        android:text="Total Price "
                        android:textSize="20sp"
                        android:textColor="@color/black" />

                    <TextView

                        android:id="@+id/txt_cart_final_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="90dp"
                        android:fontFamily="@font/calibrib"
                        android:gravity="right"
                        android:text="-6%"
                        android:textSize="20sp"
                        android:textColor="@color/black" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    >
                    <Button
                        android:id="@+id/btn_clear_cart"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_curve_white"
                        android:backgroundTint="@color/my_theme_pink"
                        android:text="Clear Cart"
                        android:textColor="@color/white"

                        />

                    <Button
                        android:id="@+id/btn_next"
                        android:layout_width="110dp"
                        android:layout_height="40dp"
                        android:background="@drawable/btn_curve_white"
                        android:backgroundTint="@color/my_theme_pink"
                        android:text="Next"
                        android:layout_marginLeft="20dp"
                        android:textColor="@color/white"

                        />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>



    </androidx.cardview.widget.CardView>




</LinearLayout>