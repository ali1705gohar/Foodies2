<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@color/my_theme_lightgray2"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".profileActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="25dp"
        android:textColor="@color/my_theme_pink"
        android:fontFamily="@font/calibrib"
        android:text="Set up User Profile" />



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alibri"
                        android:text="First Name *"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/profile_first_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/txt_back"
                        android:elevation="2dp"
                        android:ems="10"
                        android:inputType="text"
                        android:paddingLeft="10sp"
                        android:hint="First Name" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alibri"
                        android:text="Last Name *"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/profile_last_name"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/txt_back"
                        android:elevation="2dp"
                        android:ems="10"
                        android:inputType="text"
                        android:paddingLeft="10sp"
                        android:hint="Last Name" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alibri"
                        android:text="Contact Number"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/editTextPhone"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/txt_back"
                        android:elevation="2dp"
                        android:ems="10"
                        android:hint="Contact Number"
                        android:inputType="phone"
                        android:paddingLeft="10sp" />

                    <TextView
                        android:id="@+id/profile_contact"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alibri"
                        android:text="Country"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/spinner_country"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/txt_back"
                        android:elevation="2dp" />

                    <TextView

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alibri"
                        android:text="City"
                        android:textColor="@color/black" />

                    <Spinner
                        android:id="@+id/spinner_city"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/txt_back"
                        android:elevation="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="@font/alibri"
                        android:text="Complete Address"
                        android:textColor="@color/black" />

                    <EditText
                        android:id="@+id/profile_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:minHeight="50dp"
                        android:background="@drawable/txt_back"
                        android:elevation="2dp"
                        android:ems="10"
                        android:hint="Complete Address"
                        android:gravity="center_vertical"
                        android:inputType="textMultiLine"
                        android:padding="10dp" />

                    <Button
                        android:id="@+id/btn_save"
                        android:layout_width="120dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/txt_back"
                        android:backgroundTint="@color/my_theme_pink"
                        android:text="Save"

                        android:textColor="@color/black" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>




</LinearLayout>